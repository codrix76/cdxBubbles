    </Resource>
    <Resource Include="Assets\error.png">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Assets\info.png">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Assets\question.png">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
