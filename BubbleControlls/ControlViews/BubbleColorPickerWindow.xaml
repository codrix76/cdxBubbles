<Window x:Class="BubbleControlls.ControlViews.BubbleColorPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BubbleColorPickerWindow"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        Width="354" Height="270"
        Topmost="True">
    <Canvas Margin="0,0,0,0">
        <!-- Farbrad (Ellipse mit Bildfüllung) -->
        <Ellipse x:Name="ColorWheel"
                 Width="220" Height="220"
                 Canvas.Left="0" Canvas.Top="0"
                 Stroke="Gray" StrokeThickness="1" HorizontalAlignment="Left" VerticalAlignment="Top">
            <!--<Ellipse.Fill>
                <ImageBrush ImageSource="pack://application:,,,/BubbleControlls;component/Assets/ColorWheel.png"/>
            </Ellipse.Fill>-->
        </Ellipse>

        <!-- Vorschau-Ellipse unten links -->
        <Ellipse x:Name="PreviewEllipse"
                 Width="35" Height="35"
                 Canvas.Left="185" Canvas.Top="185"
                 Stroke="White" StrokeThickness="1"
                 Fill="Transparent"/>

        <TextBlock Text="Hex:" Foreground="White" HorizontalAlignment="Left" Canvas.Left="245" Canvas.Top="158" VerticalAlignment="Center" Height="18" Width="23"/>
        <TextBox x:Name="HexBox" Width="67" Text="#FFFF0000" HorizontalAlignment="Left" Canvas.Left="272" Canvas.Top="158" VerticalAlignment="Center"/>

        <TextBlock Text="Red:" Foreground="White" HorizontalAlignment="Left" Canvas.Left="245" Canvas.Top="45" VerticalAlignment="Center"/>
        <TextBox x:Name="RedBox" Width="45"  Height="19" Text="255" 
                 Canvas.Left="272" Canvas.Top="45" 
                 HorizontalAlignment="Left" VerticalAlignment="Center"/>

        <TextBlock Text="Green:" Foreground="White"
                Canvas.Left="233" Canvas.Top="68"
                HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBox x:Name="GreenBox" Width="45"  Height="19" Text="0"
                 Canvas.Left="272" Canvas.Top="68"
                 HorizontalAlignment="Left" VerticalAlignment="Center"/>

        <TextBlock Text="Blue:" Foreground="White"
                Canvas.Left="242" Canvas.Top="91"
                HorizontalAlignment="Left" VerticalAlignment="Center" Height="19"/>
        <TextBox x:Name="BlueBox" Width="45" Height="19" Text="0"
                 Canvas.Left="272" Canvas.Top="91" 
                 HorizontalAlignment="Left" VerticalAlignment="Center"/>

        <TextBlock Text="Alpha:" Foreground="White"
                Canvas.Left="235" Canvas.Top="114"
                HorizontalAlignment="Left" VerticalAlignment="Center" Height="19"/>
        <TextBox x:Name="AlphaBox" Width="45" Text="255"
                 Canvas.Left="272" Canvas.Top="114" 
                 HorizontalAlignment="Left" VerticalAlignment="Center"/>

        <Button x:Name="OkButton" Content="OK" Width="80" Canvas.Left="170" Canvas.Top="235" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Button x:Name="CancelButton" Content="Abbrechen" Width="80" Canvas.Left="259" Canvas.Top="235" HorizontalAlignment="Center" VerticalAlignment="Top"/>

    </Canvas>
</Window>
